@model WebData.Models.student
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class=" row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class=" card-header">
                    <h1 class="text-center text-primary">Edit Student Record</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="Id"></label>
                            <input type="hidden"asp-for="Id" />
                            <input type="text" asp-for="Id" class="form-control" placeholder="enter student Id" />
                        </div>
                        <div class="form-group">
                            <label asp-for="firstname"></label>
                            <input type="text" asp-for="firstname" class="form-control" placeholder="enter student firstname" />
                        </div>
                        <div class="form-group">
                            <label asp-for="lastname"></label>
                            <input type="text" asp-for="lastname" class="form-control" placeholder="enter student lastname" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="text" asp-for="Email" class="form-control" placeholder="enter student email" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Mobile"></label>
                            <input type="text" asp-for="Mobile" class="form-control" placeholder="enter student mobilenumber" />
                        </div>
                        <div class="form-group">
                            <label asp-for="city"></label>
                            <input type="text" asp-for="city" class="form-control" placeholder="enter student city" />
                        </div>
                        <div class=" form-group">
                            <input type="submit" value="submit" class="btn btn-sm btn-success float-end" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



